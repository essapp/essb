{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "stories/*.ts",
    "stories/*.tsx",
    "stories/*.mdx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "site/**/*.ts",
    "site/**/*.tsx",
    "site/**/*.vue",
    "site/vite-env.d.ts",
    "site/main.ts",
    "site/App.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
